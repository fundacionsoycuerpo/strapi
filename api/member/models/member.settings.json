{
  "connection": "default",
  "collectionName": "Members",
  "info": {
    "name": "Member"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "email",
      "unique": true
    },
    "bio": {
      "type": "richtext"
    },
    "role": {
      "type": "string"
    },
    "avatar": {
      "type": "component",
      "repeatable": false,
      "component": "custom.captioned-image",
      "required": true
    }
  }
}
